<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXCheckBox?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane id="AnchorPane" prefHeight="476.0" prefWidth="415.0" stylesheets="@../../css/login.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.viii28stw.pensiltikfrontend.controller.form.LoginController">
   <children>
      <ImageView fx:id="imgvwLogoVergo" fitHeight="76.0" fitWidth="103.0" layoutX="146.0" layoutY="30.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../img/vergo_logo_login.jpg" />
         </image>
      </ImageView>
      <JFXTextField fx:id="jtxEmail" layoutX="57.0" layoutY="165.0" onKeyPressed="#jtxEmailOnKeyPressed" prefHeight="31.0" prefWidth="300.0" promptText="%textfield.prompttext.email" />
      <JFXPasswordField fx:id="jpwSenha" layoutX="57.0" layoutY="243.0" onKeyPressed="#jpwSenhaOnKeyPressed" prefHeight="31.0" prefWidth="300.0" promptText="%textfield.prompttext.password" />
      <JFXCheckBox fx:id="jchxLembrarDeMim" layoutX="57.0" layoutY="320.0" text="%hyperlink.remember.me" />
      <Hyperlink layoutX="52.0" layoutY="344.0" text="%hyperlink.login.i.forgot.my.password" />
      <Hyperlink alignment="CENTER_RIGHT" layoutX="244.0" layoutY="320.0" onAction="#hlkSetUpSystemLanguage" prefHeight="23.0" prefWidth="115.0" text="%hyperlink.setup.language" />
      <JFXButton buttonType="RAISED" layoutX="242.0" layoutY="380.0" onAction="#jbtnLoginOnAction" prefHeight="50.0" prefWidth="115.0" text="%button.login" />
      <HBox alignment="CENTER_LEFT" layoutX="52.0" layoutY="442.0" prefHeight="20.0" prefWidth="307.0" spacing="7.0">
         <children>
            <ImageView fx:id="imgvwNotificacao" fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true" />
            <Label fx:id="lblNotificacao" prefHeight="18.0" prefWidth="282.0" text="%label.login.credentials.dont.match" />
         </children>
      </HBox>
   </children>
</AnchorPane>
